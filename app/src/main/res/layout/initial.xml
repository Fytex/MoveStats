<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1d3557">

    <TextView
        android:id="@+id/textInitial"
        android:layout_width="410dp"
        android:layout_height="67dp"
        android:background="#a8dadc"
        android:fontFamily="@font/black_ops_one"
        android:gravity="center"
        android:text="DATA COLLECTION"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/freeRoam"
        android:layout_width="207dp"
        android:layout_height="110dp"
        android:text="Free Roam"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/button20sec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInitial"
        app:layout_constraintVertical_bias="0.936" />

    <Button
        android:id="@+id/button20sec"
        android:layout_width="207dp"
        android:layout_height="110dp"
        android:layout_marginBottom="76dp"
        android:text="20 Seconds"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="261dp"
        android:layout_height="355dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInitial"
        app:layout_constraintVertical_bias="0.148"
        app:srcCompat="@drawable/o_o" />
</androidx.constraintlayout.widget.ConstraintLayout>